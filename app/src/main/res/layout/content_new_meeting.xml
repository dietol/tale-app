<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".NewMeetingActivity"
    tools:showIn="@layout/activity_new_meeting">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Name of meeting"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/text_size_medium"
                android:layout_marginLeft="4dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccentLight"
                android:layout_marginTop="5dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Time of meeting"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/text_size_medium"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="100dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:background="@color/colorAccentLight">

                <EditText
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="time"
                    android:textSize="@dimen/text_size_large"
                    android:text="12:00 pm"
                    android:gravity="center"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Place of meeting"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="4dp"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/text_size_medium"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccentLight">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Place"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Pick from map"
                    android:background="@color/colorAccent"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Members"
                android:gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/textColorDark"
                android:textSize="@dimen/text_size_medium"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="4dp"
                android:paddingBottom="8dp"
                android:background="@color/colorAccentLight">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="New member"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thomas"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="4dp"
                        android:textSize="@dimen/text_size_medlar"
                        android:textColor="@color/textColorDark"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tiffany"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="4dp"
                        android:textSize="@dimen/text_size_medlar"
                        android:textColor="@color/textColorDark"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sarah"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="4dp"
                        android:textSize="@dimen/text_size_medlar"
                        android:textColor="@color/textColorDark"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">

                <Button
                    android:id="@+id/button_new_meeting"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Create meeting"
                    android:background="@color/colorAccent"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>